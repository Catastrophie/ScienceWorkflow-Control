<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!-- Main Background and Layout -->

    <include layout="@layout/content_robotic__sen__cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="2dp"/>

    <!-- Open Start Menu -->
    <TableRow
        android:id="@+id/returnToStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/menuIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0"

            android:adjustViewBounds="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/mainmenu" />

    </TableRow>


    <!-- Switch Camera -->
<!--       <LinearLayout
           android:id="@+id/switchCamera"
           android:layout_width="75dp"
           android:layout_height="75dp">
           &lt;!&ndash;android:layout_alignAbove="sensorsLayout" &ndash;&gt;

           <ImageView
               android:id="@+id/current_conditions_icon1"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_weight="1"
               android:layout_gravity="clip_vertical"
               android:paddingLeft="16dp"
               android:src="@drawable/s_camera" />

       </LinearLayout>-->

    <!-- Sensor Communications -->

    <LinearLayout
        android:id="@+id/sensorsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="end"
        android:background="@color/colorPrimary"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <!-- Communications -->
        <LinearLayout
            android:id="@+id/comBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center">

            <ImageView
                android:id="@+id/sensorReadings"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:src="@drawable/combox" />
        </LinearLayout>

        <!-- Movement and Sensor Readings -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:shrinkColumns="3,4,5"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Camera Panning -->
                <LinearLayout
                    android:id="@+id/cameraPanningLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/camera_pan"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom"
                        android:src="@drawable/c_panning" />
                </LinearLayout>

                <!-- Robotic Movement -->

                <LinearLayout
                    android:id="@+id/movementLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:contentDescription="s"
                        android:id="@+id/movement360"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/movement" />
                </LinearLayout>

                <!-- Speedometer -->

                <LinearLayout
                    android:id="@+id/speedlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    >

                    <ImageView
                        android:id="@+id/speedometer"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/speed" />
                </LinearLayout>

                <!-- Pressure -->

                <LinearLayout
                    android:id="@+id/pressurelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pressure_gauge"
                        android:layout_width="66dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pressure" />
                </LinearLayout>

                <!-- Temperature -->

                <LinearLayout
                    android:id="@+id/temp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/temp_gauge"
                        android:layout_width="75dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/temperature" />
                </LinearLayout>

                <!-- Humidity -->

                <LinearLayout
                    android:id="@+id/humidlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/humid_gauge"
                        android:layout_width="69dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/humid" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

   <!-- <ImageView
        android:id="@+id/streamview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        />-->
</RelativeLayout>