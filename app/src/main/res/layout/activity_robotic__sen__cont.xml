<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
// Main Background and Layout
    <include
        layout="@layout/content_robotic__sen__cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/green_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:baselineAligned="false"
        >

        <!-- Open Start Menu -->
        <LinearLayout
            android:id="@+id/yellow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/current_conditions_icon"
                android:src="@drawable/ic_menu_camera"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_gravity="clip_vertical"
                android:layout_width="100dip"
                android:layout_height="100dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Gyro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/current_conditions_icon4"
                android:src="@drawable/ic_menu_camera"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="100dip"
                android:layout_height="100dip" />

        </LinearLayout>

        <!-- Switch Camera -->

        <LinearLayout
            android:id="@+id/switchCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <ImageView
                android:id="@+id/current_conditions_icon1"
                android:src="@drawable/ic_menu_camera"
                android:paddingTop="24dp"
                android:paddingBottom="20dp"
                android:layout_gravity="clip_vertical"
                android:layout_width="100dip"
                android:layout_height="100dip" />

        </LinearLayout>

        <!-- Sensor Communications -->
        <LinearLayout
            android:id="@+id/red_layout"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <!-- Communications -->
            <LinearLayout
                android:id="@+id/orange_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/sensorReadings"
                    android:src="@drawable/communicationboxbackground"
                    android:layout_width="450dp"
                    android:layout_height="250dp"
                    android:paddingBottom="28dp"

                    />
            </LinearLayout>

            <!-- Movement and Sensor Readings -->
            <TableLayout
                android:stretchColumns="0,1,2,3,4,5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <TableRow>
                    <!-- Camera Panning -->
                    <LinearLayout
                        android:id="@+id/day1_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/day1_icon"
                            android:src="@drawable/ic_menu_send"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>

                    <!-- Robotic Movement -->

                    <LinearLayout
                        android:id="@+id/day1_layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/day1_icon3"
                            android:src="@drawable/ic_menu_send"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>

                    <!-- Speedometer -->

                    <LinearLayout
                    android:id="@+id/day1_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/day1_icon1"
                        android:src="@drawable/ic_menu_send"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    </LinearLayout>

                    <!-- Pressure -->

                    <LinearLayout
                        android:id="@+id/day1_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/day1_icon2"
                            android:src="@drawable/ic_menu_send"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>

                    <!-- Temperature -->

                    <LinearLayout
                        android:id="@+id/day2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/day2_icon"
                            android:src="@drawable/ic_menu_manage"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>

                    <!-- Humidity -->

                    <LinearLayout
                        android:id="@+id/day3_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/day3_icon"
                            android:src="@drawable/ic_menu_gallery"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <!-- Purple Zone -->
      <!--  <TableLayout
            android:id="@+id/purple_layout"
